@model LRC_NET_Framework.tb_MemberMaster
@{
    Layout = null;
}
<div style="font-size:smaller;">
    <div class="form-group">
        <div class="col-md-11 col-md-offset-1" id="MemberName">
            @Html.Label("MemberName", "By Member Name", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-11 col-md-offset-1" id="DepartmentID">
            @Html.Label("DepartmentID", "By Department", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("DepartmentID", null, htmlAttributes: new { @class = "form-control" })

            @*@Html.DropDownList("DepartmentID", ViewBag.Departments as SelectList, new { @class = "form-control", style = "width: 300px" })*@
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-md-8" style="margin-top:30px;">
            <input type="submit" value="Set Filter" class="btn btn-primary" />
        </div>
    </div>

</div>