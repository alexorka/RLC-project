@model LRC_NET_Framework.tb_WeekDay
    
@{ Layout = null; }

<div class="col-md-11 col-md-offset-1" style="padding-top:10px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11" id="Excel">
                    <span class="text-danger">*&nbsp;&nbsp;</span>@Html.Label("Excel", "Week Days Abbreviation from Excel", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.CbuWeekDay, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g.: MTWRFSaSu", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.CbuWeekDay, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11" id="Sql">
                    <span class="text-danger">*&nbsp;&nbsp;</span>@Html.Label("Sql", "Week Days Abbreviation to MS SQL", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.WeekDayName, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g.: M, T, W, Th, F, Sa, Su", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.WeekDayName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-11" style="padding-top:10px;">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>