                @Html.TextAreaFor(model => model.BackgroundStory, new { @class = "form-control", @required = "required", @cols = "100", @rows = "4", @style = "width:100%;" })
                @Html.ValidationMessageFor(model => model.BackgroundStory, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    }

