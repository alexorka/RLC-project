    {
        @Html.AntiForgeryToken()


    }*@
<hr>
<div class="form-horizontal" style="padding-left:50px; padding-top:20px;">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
