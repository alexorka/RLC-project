@model LRC_NET_Framework.tb_MemberMaster

@*<a href="/User/DownloadExcel/">
    <img src="~/Images/excel.gif" width="72" height="45" title="Download Excel format" alt="excel" />*@
    @{
        ViewBag.Title = "UploadExcel";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>UploadExcel</h2>

    <h4>Add Users via Excel</h4>
    <hr />
    @using (Html.BeginForm("UploadExcel", "ImportExcel", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return myFunction()" }))
    {
        <div class="form-horizontal">
            <div class="form-group">
                <div class="control-label col-md-2">Download Format:</div>
                <div class="col-md-10">
                    @*<a href="/User/DownloadExcel/"><img src="~/Images/excel.gif" width="72" height="45" title="Download Excel format" alt="excel" /></a>*@
                    <a href="#" class="btn btn-default">Excel&nbsp;&nbsp;<span class="glyphicon glyphicon-import" aria-hidden="true"></span></a>

                </div>
            </div>


            <div class="form-group">

                <div class="control-label col-md-2">Excel:</div>
                <div class="col-md-10">
                    <input type="file" id="FileUpload" name="FileUpload" class="btn btn-info" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Upload" id="btnSubmit" class="btn btn-primary" />

                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
