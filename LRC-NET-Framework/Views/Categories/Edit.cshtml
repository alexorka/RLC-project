@model LRC_NET_Framework.tb_Categories

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="padding-bottom:10px; padding-top:10px; margin:2px;">
    <div class="col-md-6 col-md-offset-3" id="Edit" style="background-color:lavender; border:solid; border-radius:5px; border-width:1px; border-color:gainsboro">
        <div style="background-color:lightsteelblue; padding-bottom:5px; padding-top:10px; padding-left:30px; border-bottom-left-radius:5px; border-bottom-right-radius:5px;">
            @Html.Label("Edit", "Edit Category", htmlAttributes: new { @class = "control-label", style = "font-size:larger;" })
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CategoryID)

                <div class="form-group">
                    @Html.Label("Category Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>