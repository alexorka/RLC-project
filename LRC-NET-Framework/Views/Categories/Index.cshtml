@model IEnumerable<LRC_NET_Framework.tb_Categories>

@{
    ViewBag.Title = "Manage Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="padding-bottom:10px; padding-top:10px; margin:2px;">
    <div class="col-md-4 col-md-offset-3" id="ManageCategories" style="padding:0 10px 10px 10px; background-color:lavender; border:solid; border-radius:5px; border-width:1px; border-color:gainsboro">
        <div style="background-color:lightsteelblue; padding:10px 0 10px 30px; border-bottom-left-radius:5px; border-bottom-right-radius:5px;">
            @Html.Label("ManageCategories", "Manage Categories", htmlAttributes: new { @class = "control-label", style = "font-size:larger;" })
            <span style="padding-left:40px; border-radius:5px;">
                <a href="@Url.Action("Create")" class="btn btn-sm btn-warning">Create New&nbsp;<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
            </span>
        </div>
        <table class="table-hover col-md-12">
            <tr>
                <th style="padding-top:20px;">
                    @Html.Label("Category Name", htmlAttributes: new { @class = "control-label" })
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.CategoryID })" class="btn btn-sm btn-primary">Edit&nbsp;<span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                        &nbsp;
                        <a href="@Url.Action("Delete", new { id = item.CategoryID })" class="btn btn-sm btn-danger">Delete&nbsp;<span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        &nbsp;
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
