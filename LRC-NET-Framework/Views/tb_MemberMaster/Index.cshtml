@model IEnumerable<LRC_NET_Framework.tb_MemberMaster>

@{
    ViewBag.Title = "Member List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Member List</h2>


<div class="container">
    <div aria-hidden="true" class="col-md-4">
        @Html.ActionLink("  Create New", "Create", null, new { @class = "btn btn-warning" })
    </div>
</div>
<hr />
<div class="container">
    @using (Html.BeginForm())
    {
        <div class="input-group col-md-3">
            @Html.TextBox("SearchString", null, new { @class = "form-control", placeholder = "Search" })
            @*<input type="text" class="form-control" placeholder="Search">*@
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
        @*<p>
                Search: @Html.TextBox("SearchString") &nbsp;
                <input type="submit" value="Search" class="btn btn-default" />
            </p>*@
    }
</div>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            First Name
        </th>
        <th>
            Area
        </th>
        <th>
            Department
        </th>
        <th>
            College
        </th>
        <th>
            Hire Date
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tb_Area.AreaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tb_Department.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tb_Department.tb_College.CollegeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="...">
                    @Html.ActionLink("Edit", "Edit", new { id = item.MemberID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.MemberID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.MemberID }, new { @class = "btn btn-danger" })
                </div>
            </td>
        </tr>
    }

</table>
