@model LRC_NET_Framework.tb_CampusMapping

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<fieldset>

    <div class="row" style="padding-bottom:10px; padding-top:10px; margin:2px;">
        <div class="col-md-8 col-lg-offset-2" id="CampusMapping" style="background-color:lavender; border:solid; border-radius:5px; border-width:1px; border-color:gainsboro">
            <div style="background-color:gainsboro; padding-bottom:5px; padding-top:10px; padding-left:30px; border-bottom-left-radius:5px; border-bottom-right-radius:5px;">@Html.Label("CampusMapping", "Campuses Mapping for Schedule Import", htmlAttributes: new { @class = "control-label", style = "font-size:larger;" })</div>
            <table class="table">
                <tr class="text-info">
                    <th width="40%">
                        CBU Location
                    </th>
                    <th width="5%">
                    </th>
                    <th width="40%">
                        Campus Name
                    </th>
                    <th width="15%">
                    <th>
                    </th>
                </tr>
                @foreach (var item in ViewBag.Campuses as List<tb_CampusMapping>)
                {
                <tr>
                    <td style="font-size:smaller;">
                        @Html.DisplayFor(modelItem => item.ScheduleMappingName)
                    </td>
                    <td style="font-size:smaller;">
                        <span class="glyphicon glyphicon-circle-arrow-right"></span>
                    </td>
                    <td style="font-size:smaller;">
                        @Html.DisplayFor(modelItem => item.tb_Campus.CampusName)
                    </td>
                    <td>
                        @Html.ActionLink("Remove", "RemoveScheduleCampusMapping", new { Id = item.ID })
                    </td>
                </tr>
                }
                @using (Html.BeginForm())
                {
                <tr>
                    <td>
                        <div id="CBU">
                            <span class="text-danger">*&nbsp;</span>
                            <small>@Html.Label("CBU", "Add new location name from CBU", htmlAttributes: new { @class = "control-label" })</small>
                            @Html.EditorFor(model => model.ScheduleMappingName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.ScheduleMappingName, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td style="font-size:smaller;">
                        <br /><br />
                        <span class="glyphicon glyphicon-circle-arrow-right"></span>
                    </td>
                    <td>
                        <div id="Campus">
                            <span class="text-danger">*&nbsp;</span>
                            <small>@Html.Label("Campus", "Select campus to be mapped", htmlAttributes: new { @class = "control-label" })</small>
                            @Html.DropDownList("CampusId", ViewBag.CampusId as SelectList, new { @class = "form-control", style = "width: 250px" })
                        </div>
                    </td>
                    <td>
                        <div style="padding-top:22px;">
                            <input type="submit" value="Add Mapping" class="btn btn-primary" />
                        </div>
                    </td>
                </tr>
                }
            </table>
        </div>
    </div>

</fieldset>

